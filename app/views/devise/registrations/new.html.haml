.row
  .col-lg-8.offset-lg-2.col-md-10.offset-md-1.col-xs-12
    %h2 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .form-group
        = f.label :username
        %br/
        = f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control"
      .form-group
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
      .form-group
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "new-password", class: "form-control"
      .form-group
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
      .form-group
        = f.label :first_name
        = f.text_field :first_name, autocomplete: "first_name", class: "form-control"
      .form-group
        = f.label :last_name
        = f.text_field :last_name, autocomplete: "last_name", class: "form-control"
      .form-group
        = f.label :birthday
        = f.date_field :birthday, autocomplete: "birthday", class: "form-control"
    
      = flash[:recaptcha_error]
      = recaptcha_tags
      %br
      .actions
        = f.submit "Sign up", class: "btn btn-succes"
        = render "devise/shared/links"
