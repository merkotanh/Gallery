.row
  .col-lg-8.offset-lg-2.col-md-10.offset-md-1.col-xs-12
    %h1 
      = t('image.edit_image_description')
    - if @image.errors.any?
      - @image.errors.full_messages.each do |msg|
        .alert.alert-danger= msg
    = form_for @image, :html => {:multipart => true} do |f|
      = image_tag @image.image_url(:thumb), class:'img-fluid rounded'
      %br
      .form-group
        = f.label t('image.im')
        = f.file_field :image, class:'form-control'
      .form-group
        = f.label :image_title
        = f.text_area :image_title, class:'form-control'
      .form-group
        = f.label :image_description
        = f.text_area :image_description, class:'form-control'
      .form-group
        = f.submit t('submit'), class:'btn btn-light'
        = link_to t('cancel'), image_path, class:'btn btn-light'
